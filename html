    <script type="text/javascript">



        function  convert(unit) {
            var cTempVal;
            var fTempVal;



            try {
                if (unit == 'c') {
                    //cTempVal = parseFloat(document.getElementById('cTemp').value);
                    cTempVal = prompt("Enter a Celsius value", "0");
                    fTempVal = (cTempVal * (9 / 5)) + 32;
                    document.getElementById('fTemp').value = fTempVal.toFixed(2);

                }
                else {
                    do {
                        x = prompt("Give me a number", "");
                    } while (isNaN(x));

                    //fTempVal = parseFloat(document.getElementById('fTemp').value);
                    fTempVal = prompt("Enter a fahrenheit value", "0");
                    cTempVal = (fTempVal - 32) * (5 / 9);
                    document.getElementById('cTemp').value = cTempVal;
                }
            }
            catch (e) {
                console.log(e);
            }

        }
    </script>

